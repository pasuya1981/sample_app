<% provide(:title, 'Edit User') %>
<h1>更新您的資料</h1>

<div class="row">
  <div class="span6 offset3">
    <%= simple_form_for @user do |f| %>
      <%= f.input :name, label: '名字' %>
      <%= f.input :email, label: '信箱' %>
      <%= f.input :password, label: '密碼' %>
      <%= f.input :password_confirmation, label: '密碼確認' %><br>
      <%= f.button :submit, value: '更新', class: 'btn btn-large btn-default' %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">change</a>
  </div>
</div>